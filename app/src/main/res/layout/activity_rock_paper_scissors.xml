<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.rockpaperscissors.RockPaperScissorsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make your choice (wisely):"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="30dp"/>

    <Button
        android:id="@+id/rockButton"
        android:textSize="30dp"
        android:text="Rock"
        android:onClick="onRockButtonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="-8dp"
        tools:layout_editor_absoluteX="257dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/paperButton"
        android:textSize="30dp"
        android:text="Paper"
        android:onClick="onPaperButtonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/scissorsButton"
        android:textSize="30dp"
        android:text="Scissors"
        android:onClick="onScissorsButtonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="80dp"
        tools:layout_editor_absoluteX="128dp"
        android:layout_gravity="center"/>

    <!--<TextView-->
        <!--android:id="@+id/scoreView"-->
        <!--android:layout_gravity="center"-->
        <!--android:textSize="20dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

</LinearLayout>
